    "connect-mongo": "^2.0.1",
    "connect-slashes": "^1.2.0",
    "cookie-parser": "^1.0.1",
    "cookies-js": "^1.2.2",
    "csurf": "^1.1.0",
    "debug": "^4.0.0",
    "downgrade": "^1.0.0",
    "escape-string-regexp": "^1.0.2",
    "express": "^4.0.0",
    "express-session": "^1.0.2",
