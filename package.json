    "lodash.countby": "^4.1.1",
    "lorem-ipsum": "^1.0.3",
    "mailchimp-api": "^2.0.7",
    "maxcdn": "^0.2.0",
    "md5": "^2.0.0",
    "minimist": "^1.2.0",
    "moment": "^2.5.1",
    "mongoose": "^5.0.17",
    "mongoose-validator": "^2.0.2",
    "nib": "^1.0.1",
    "nodemailer": "^4.6.4",
